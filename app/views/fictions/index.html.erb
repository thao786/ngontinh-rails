<div class="jumbotron">
  <p></p>
</div>

<div class="row body">
  <div class="col-sm-3">
    <%= render partial: "util/truyenngaunhien", object: @random %>
  </div><!--col-sm-3-->

  <div class="col-sm-9">
    <ol class="breadcrumb">
      <li><a href="/">Home</a></li>
      <li class="active">List of Stories</li>
    </ol>

    <div class="row">
      <div class="col-sm-3 chuThich">
        <img src="https://s3.amazonaws.com/ngontinh/image/fairytale.jpg" class="img-thumbnail img-responsive img-circle" width="130" height="130">
        <a href="#"><h4><span class="label label-warning">Fairy Tales</span></h4></a>
        <span class="text-muted">Magical and imaginary beings and lands.</span>
      </div>
      <div class="col-sm-3">
        <img src="https://s3.amazonaws.com/ngontinh/image/classical.jpg" class="img-thumbnail img-responsive img-circle" width="130" height="130">
        <a href="#"><h4><span class="label label-primary">Classical</h4></a>
        <span class="text-muted">A classic stands the test of time, which is considered to be a representation of the period in which it was written.</span>
      </div>
      <div class="col-sm-3 chuThich">
        <img src="https://s3.amazonaws.com/ngontinh/image/adventure.jpg" class="img-thumbnail img-responsive img-circle" width="130" height="130">
        <a href="#"><h4><span class="label label-warning">Adventure</h4></a>
        <span class="text-muted">Journeys to epic or distant places to accomplish something.</span>
      </div>
      <div class="col-sm-3">
        <img src="https://s3.amazonaws.com/ngontinh/image/comedy.jpg" class="img-thumbnail img-responsive img-circle" width="130" height="130">
        <a href="#"><h4><span class="label label-primary">Comedy</h4></a>
        <span class="text-muted">Story that tells about a series of funny or comical events.</span>
      </div>
    </div><!--Row-->


    <br>
    <a href="#"><h4 class="green">&raquo Check out more genres <span class="label label-success">here</span></h4></a>

    <br>
    <h1 class="header">List of <span class="text-success"><strong>Stories</strong></span></h1>
    <br>
    <div class="table-responsive">
      <table class="table table-striped table-hover">
        <thead>
        <tr>
          <th>Overview</th>
          <th><a>Title</a></th>
          <th><a>Author</a></th>
          <th><a>Genre</a></th>
          <th><a>State</a></th>
          <th><a>Edit</a></th>
        </tr>
        </thead>
        <tbody>

        <% @fictions.each do |p| %>
            <tr>
              <td>
                    <span class='dropdown hidden-xs'>
                       <button class='dropdown-toggle btn btn-default btn-sm' data-toggle='dropdown'>Overview <b class='caret'></b></button>
                        <div class='dropdown-menu overview'>
                          <div class='row'>
                            <div class='col-sm-3'>
                              <img src='<%= p.getImg %>' class='thumbnail img-responsive imgFloat' width='140' height='190'>
                            </div>
                            <div class='col-sm-9'>
                              ><b><%= p.title %></b>
                              <hr>
                              <p><%= p.overview %></p>
                            </div>
                          </div>
                        </div>
                    </span>
              </td>
              <td><%= link_to p.title, fiction_path(p) %></td>
              <td><%= p.author %></td>
              <td><%= p.genres.map { |x| x.title + " | " }.join %></td>
              <td><%= p.state ? "Completed" : "Not Completed" %></td>
              <td><%= link_to 'Edit', edit_fiction_path(p) %></td>
            </tr>
        <% end %>

        <%= paginate @fictions %>

        </tbody>
      </table>
    </div><!--Table responsive--><%= paginate @fictions %>
  </div>
</div>
</div>

</div><!--startofbody-->
</div><!--container-->