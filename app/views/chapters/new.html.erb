  <h1>Add Chapters to <%= @fiction.title %> </h1>

<%= form_for :chapter, url: fiction_chapters_path() do |f| %>
  <p>
    <%= f.label :chapnum %><br>
    <%= f.text_field :chapnum %>
  </p>

      <p>
    <%= f.label :title %><br>
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>